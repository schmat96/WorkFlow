<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/color_change">

    <include
    android:id="@+id/app_bar"
    layout="@layout/app_bar"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_marginTop="@dimen/marginCardView"
        android:layout_marginBottom="@dimen/marginCardView">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/addButtonCardView"
            android:layout_gravity="bottom"
            card_view:contentPadding="20dp"
            card_view:cardMaxElevation="10dp"
            card_view:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="4dp" >

            <LinearLayout
                android:id="@+id/scanHinweis"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/hinweis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="NFC activated" />

                <Switch
                    android:id="@+id/nfcswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="NFC" />

            </LinearLayout>

        </android.support.v7.widget.CardView>




        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/card_view_container">
        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</RelativeLayout>