<?xml version="1.0" encoding="utf-8"?>
<net.ict.workflow.workflow.Bar xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:weightSum="100"
    android:id="@+id/app_bar_main">

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="70"
        android:id="@+id/app_bar_right"
        android:background="@android:color/holo_green_dark"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:id="@+id/app_bar_left"
        android:layout_height="fill_parent"
        android:layout_weight="30"
        android:background="@android:color/holo_blue_light"
        android:clipChildren="false"
        android:orientation="horizontal">
    </LinearLayout>

</net.ict.workflow.workflow.Bar>