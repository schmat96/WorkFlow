<?xml version="1.0" encoding="utf-8"?>
<net.ict.workflow.workflow.Bar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/app_bar_main">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:weightSum="90"
        android:maxHeight="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:id="@+id/app_bar_textleft"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:id="@+id/app_bar_textmid"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:id="@+id/app_bar_textright"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:weightSum="100"
        android:maxHeight="10dp"
        android:id="@+id/app_bar_bar">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="80"
            android:id="@+id/app_bar_right"
            android:background="@android:color/holo_green_light"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
            android:id="@+id/app_bar_left"
            android:layout_height="fill_parent"
            android:layout_weight="20"
            android:background="@android:color/holo_green_light"
            android:clipChildren="false"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
</net.ict.workflow.workflow.Bar>
